<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ukuke.gl.sensormind" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_group_work_white_48dp"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >

        <!-- android:theme="@style/AppTheme" -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>

                <!-- This is the launcher activity! -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceCapabilitiesActivity"
            android:label="@string/title_activity_device_capabilities"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukuke.gl.sensormind.MainActivity" />
        </activity>
        <activity
            android:name=".AddDeviceActivity"
            android:label="@string/title_activity_add_device"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukuke.gl.sensormind.MainActivity" />
        </activity>

        <service
            android:name=".BackgroundServiceManager"
            android:exported="false" />

        <activity
            android:name=".ConfigurationActivity"
            android:label="@string/title_activity_configuration"
            android:parentActivityName=".AddDeviceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ukuke.gl.sensormind.AddDeviceActivity" />
        </activity>
    </application>

</manifest>
